{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/app/*": ["./src/app/[lang]/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/app/(DashboardLayout)/CarsInventory/Cars/page.jsx", "src/app/(DashboardLayout)/components/container/PageContainer.jsx", "src/app/[lang]/(DashboardLayout)/layout/sidebar/MenuItems.jsx", "src/app/[lang]/(DashboardLayout)/layout/sidebar/SidebarItems.tsx", "src/app/[lang]/(DashboardLayout)/page.jsx", "src/app/[lang]/layout.jsx"],
  "exclude": ["node_modules"]
}
